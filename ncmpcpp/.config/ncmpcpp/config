# general
ncmpcpp_directory = "~/.config/ncmpcpp"
mpd_host = localhost
mpd_port = 6600
mpd_music_dir = "~/mus"
lyrics_directory = "~/.cache/ncmpcpp/lyrics"
execute_on_song_change = dunstify -r 404 -i "/usr/share/icons/Papirus-Dark/symbolic/emblems/emblem-music-symbolic.svg" "$(mpc current -f %title%)" "$(mpc current -f '%artist% - %album%')"

# appearance
visualizer_data_source = /tmp/mpd.fifo
visualizer_output_name = fifo
visualizer_in_stereo = yes
visualizer_type = spectrum
visualizer_look = ██
song_list_format = {$5%a$9 $8-$9 $3%t$9}|{$8%f$9}$R{$6%l$9}
song_status_format = {%t - %a}|{%f}
song_library_format = {%t - %a}|{%f}{$R%l}
current_item_prefix = $(magenta)$r
now_playing_prefix = >$9 $b
now_playing_suffix = $/b$9
playlist_display_mode = classic
volume_change_step = 5
progressbar_look = -+-
header_visibility = no
external_editor = vim
state_line_color = black
main_window_color = magenta
progressbar_color = white:b
progressbar_elapsed_color = yellow:b
statusbar_time_color = default
